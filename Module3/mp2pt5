#Student Grade Calculator 


subject_list = []
score_list = []
length_of_list = len(score_list)

def add_subject(subject):
    add_subject.append(subject)

def add_score(score):
    add_score.append(score)
    print(f"{score} has added.")
    
def average():
    average = sum(score_list) / length_of_list
    
while True:
    print("--Menu--")
    print("1. Add Score: ")
    print("2. Calculate Average: ")
    print("3. Exit: ")

    choice = int(input("Enter your choice: (1-3) "))
    
    if choice == 1:
        subject = input("Enter subject: ")
        add_subject(subject)
        print(f"{subject} has added.")
        score = input(float("Enter a score: "))
        add_score(score)
    elif choice == 2:
        print(average)
    elif choice == 3:
        print("Exiting...Goodbye!")
        sys.exit()
