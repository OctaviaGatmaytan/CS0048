#To-do List

import sys

todo_list = []

def add_task(task):
    todo_list.append(task)
    print(f"{task} added to the task.")
    
def remove_task():
    if not todo_list:
        print("No task to remove.")
    else:
        task_to_remove = input("Enter a task you want to remove: ")
        todo_list.remove(task_to_remove)
        print(f"{task_to_remove} has been removed.")

def view_task():
    if not todo_list:
        print("The list is empty.")
    else: 
        print("\n Task:")
        for index, task in enumerate(todo_list):
            print(f"{index + 1}. {task}")
            
while True:
    
    print("--Menu--")
    print("1. Add Task")
    print("2. Remove Task")
    print("3. View Task")
    print("4. Exit")

    choice = int(input("Enter your choice (1-4): "))

    if choice == 1:
        task = input("Enter a task: ")
        add_task(task)
    elif choice == 2:
        remove_task()
    elif choice == 3:
        view_task()
    elif choice == 4:
        print("Exiting...Goodbye!")
        sys.exit()
    else:
        print("Invalid choice.")
